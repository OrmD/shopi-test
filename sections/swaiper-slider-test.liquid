		  "default": true
		},
		{
			"type": "range",
			"id": "distance_betw_slides_tb",
			"min": 1,
			"max": 20,
			"step": 1,
			"label": "Distance between slides(0 to 20) (Tablet)",
			"default": 10
		  },
		{
			"type": "range",
			"id": "number_image_tb",
			"min": 1,
			"max": 4,
			"step": 1,
			"label": "Number image (Tablet)",
